*
  box-sizing border-box
html, body
  height 100%
  overflow hidden
  user-select none
img
  vertical-align middle
a
  text-decoration none
input[type="text"], input[type="password"], input[type="number"], input[type="tel"]
  width 380px
  height 50px
  border-radius 25px
  text-indent 71px
  font-size 16px
  border none
  padding 0
  outline none
  background-color #fff3cb
  color #333
  &::placeholder
    color $inputPlace
button
  border none
  outline none
  cursor pointer
  padding 0
input[type="checkbox"]
  vertical-align middle
  width 23px
  height 23px
  -webkit-appearance none
  opacity 0
  outline none
  margin 0
  cursor pointer
  &+label
    position relative
    display inline-block
    left -23px
    z-index -1
    width 23px
    height 23px
    border-radius 100%
    background #ccc
    vertical-align middle
    margin-right -13px
    &::before, &::after
      content ""
      position absolute
      background #fff
      border-radius 1px
      transform rotate(-45deg)
    &::before
      width 2px
      height 9px
      left 6px
      top 9px
    &::after
      width 12px
      height 2px
      left 8px
      top 11px
  &:checked+label
    background #ff9c3a

/* 乐学猫dialog */
.lxm-dialog-box
  width 1000px !important
  margin-top 0 !important
  top 50%
  transform translateY(-50%)
  border-radius 30px
  padding 50px
  padding-bottom 35px
  .el-dialog__header
    display none
  .el-dialog__body
    padding 0